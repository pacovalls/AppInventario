<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    card_view:cardCornerRadius="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">




                    <TextView
                        android:id="@+id/tvIdInventario"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Inventario: XXXX" />

                    <TextView
                        android:id="@+id/tvIdLinea"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Linea: 1" />


                    <TextView
                        android:id="@+id/tvIdArticulo"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Codigo: 10002505" />

                    <TextView
                        android:id="@+id/tvArtDescripcion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="Descripcion:MANGUITO CAUCHO 1/2 JBC"
                        android:textAppearance="@android:style/TextAppearance" />

                    <TextView
                        android:id="@+id/tvArtCodigoEan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@android:style/TextAppearance"
                        android:text="CÃ³d Ean: 8410135005256"/>

                    <TextView
                        android:id="@+id/tvInvl_Cantidad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@android:style/TextAppearance"
                        android:text="Cantidad:"/>

            <FrameLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">



                                <Button
                                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="Modificar"
                                    android:id="@+id/btnModificar" />

                                <Button
                                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="Eliminar."
                                    android:id="@+id/btnEliminar" />



                    </LinearLayout>

         </FrameLayout>

     </LinearLayout>



</android.support.v7.widget.CardView>
